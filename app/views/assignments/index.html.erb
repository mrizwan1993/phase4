<p id="notice"><%= notice %></p>

<h2 class="heading">All Assignments</h2>

<table class="bordered highlight centered responsive-table">
  <thead>
    <tr>
      <th class="heading">Start Date</th>
      <th class="heading">End Date</th>
      <th class="heading">Pay Level</th>
      <th class="heading">Store Name</th>
      <th class="heading">Employee Last Name</th>

      <div class="center-align">
      <a class="waves-effect waves-red deep-orange darken-4 hoverable btn white-text" href="stores/new"><i class="material-icons left">note_add</i>Add Assgmt</a></li>
      </div>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td class="heading"><%= assignment.start_date %></td>
        <td class="heading"><%= assignment.end_date %></td>
        <td class="heading"><%= assignment.pay_level %></td>

        <td class="heading"><%= assignment.employee.last_name %></td>
        <td class="heading"><a class="waves-effect waves-circle waves-light deep-orange darken-4 btn-floating secondary-content" href=<%= assignment_path(assignment) %>><i class="material-icons left">info</i></a></td>
        <td class="heading"><a class="waves-effect waves-circle waves-light deep-orange darken-4 btn-floating secondary-content" href=<%= edit_assignment_path(assignment) %>><i class="material-icons left">edit</i></a></td></td>
        <td class="heading"><a class="waves-effect waves-circle waves-light deep-orange darken-4 btn-floating secondary-content" data-confirm="Are you sure?", data-method="delete" href=<%= assignment %>><i class="material-icons left">delete</i></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <footer class="page-footer" id="normal">
      <div class="container">
      <div class="row">
        <div class="col s12 center">
        <%= render partial: 'partials/footer' %>
        </div>
      </div>
      </div>
    </footer>
<br>
