  <!--Code for the actual nav bar-->
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper">
        <img class="logo" src="/assets/Logo.png"></img>
        <a href=<%= landing_index_path %> class="brand-logo heading">The A&M Creamery</a>
        <ul class="right">
            <li><a class="drowdown-button white-text" href=<%= %>>Active Stores<i class="material-icons left">local_mall</i></a></li>
