<p id="notice"><%= notice %></p>

<h1 class="heading">All Stores</h1>

<table class="boredered highlight centered responsive-table">
  <thead>
    <tr>
      <th class="heading">Name</th>
      <th class="heading">Street</th>
      <th class="heading">City</th>
      <th class="heading">State</th>
      <th class="heading">Zip</th>
      <th class="heading">Phone</th>
      <th class="heading">Latitude</th>
      <th class="heading">Longitude</th>
      <th class="heading">Active</th>
      <a class="waves-effect waves-red deep-orange darken-4 hoverable btn white-text" href="stores/new"><i class="material-icons left">add_location</i>Add a Store</a></li>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td class="heading"><%= store.name %></td>
        <td class="heading"><%= store.street %></td>
        <td class="heading"><%= store.city %></td>
        <td class="heading"><%= store.state %></td>
        <td class="heading"><%= store.zip %></td>
        <td class="heading"><%= store.phone %></td>
        <td class="heading"><%= store.latitude %></td>
        <td class="heading"><%= store.longitude %></td>
        <td class="heading"><%= store.active %></td>
        <td class="heading"><a class="waves-effect waves-circle waves-light deep-orange darken-4 btn-floating secondary-content" href="stores/show"><i class="material-icons left">info</i></a></td>
        <td class="heading"><a class="waves-effect waves-circle waves-light deep-orange darken-4 btn-floating secondary-content" href="stores/edit"><i class="material-icons left">edit</i></a></td></td>
        <td class="heading"><a class="waves-effect waves-circle waves-light deep-orange darken-4 btn-floating secondary-content" href="stores", store, method: :delete, data: { confirm: 'Are you sure?' }><i class="material-icons left">delete</i></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
