<h2 class="heading">View Shift</h2>
<!--create buttons with links in a row-->
<div class="row center-align">
  <a class="waves-effect waves-red deep-orange darken-4 hoverable btn white-text" href=<%= new_shift_path%>><i class="material-icons left">add</i>Add a Shift</a></li>
  <a class="waves-effect waves-red deep-orange darken-4 hoverable btn white-text" href=<%= edit_shift_path(@shift) %>><i class="material-icons left">edit</i>Edit</a></li>
  <a class="waves-effect waves-red deep-orange darken-4 hoverable btn white-text" href=<%=  admin_shifts_view_index_path %>><i class="material-icons left">arrow_back</i>Shift List</a></li>
</div>

<!--Create table headings with details of stores-->
<table class="bordered highlight centered responsive-table">
  <thead>
    <tr>
      <th class="heading">Date</th>
      <th class="heading">Start Time</th>
      <th class="heading">End Time</th>
      <th class="heading">Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <!--Create the body of the table with links to the fields of the schema -->
  <tbody>
      <tr>
        <td class="heading"><%= @shift.date %></td>
        <td class="heading"><%= @shift.start_time %></td>
        <td class="heading"><%= @shift.end_time %></td>
        <td class="heading"><%= @shift.notes %></td>
        <!--3 buttons with each assignment record to view info, edit and delete it respectively-->
      </tr>

  </tbody>
</table>





















